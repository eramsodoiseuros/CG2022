<!-- 
Tamanhos dos objetos (Diametro) | Distancia ao origem (Sol) + Tamanho do sol
~(Tamanho Real / 20 000)        | ~(Distancia / 10 000 000) 
Sol             = 7             |   0
    Mercurio    = 0.25          |   6           
    Venus       = 0.6           |   11
    Terra       = 0.65          |   14
        Lua     = 0.20          |   0.04
    Marte       = 0.35          |   23

Distancias demasiado grandes 
Distancia / 

    Jupiter     = 12            |   78      45
        Ganyme  = 0.26          |   0.11
        Callisto= 0.24          |   0.19
        IO      = 0.18          |   0.04
        Europa  = 0.15          |   0.07
    Saturno     = 6             |   143     75
        Titan   = 0.26          |   0.12
        Rhea    = 0.08          |   0.05
    Urano       = 2.5           |   287     85
        Triton  = 0.15          |   0.04
    Neptuno     = 2.5           |   450     90
        Titania = 0.08          |   0.16
-->

<!-- group (Planeta)
        <rotate angle axisX axisY axisZ />  -> definir angulo e sobre que eixo esiste rotação
        <scale scaleX scaleY scaleZ />      -> Aumentar o modelo
        <color R G B />                     -> atribuir uma cor
        <orbit radX radZ />                 -> define o raio da orbita 
        <translate X Y Z />                 -> Distancia do sol

        group (Satelite Natural) - Apenas destacamos os 10 maiores do sistema solar.
-->
<scene>

    <!-- Definições da camara -->
    <camara>
        <position X = 0 Y = 30 Z = 5 />
        <lookAt X = 0 Y = 0 Z = 0 />
        <up X = 0 Y = 1 Z = 0 />
        <projection fov = 800 near = 1 far = 1000 />
    </camara>

    <!-- talvez inserir isto dentro da camera -->
    <lights>
        <light type=1 posX='0' posY='0' posZ='0'/> <!-- Há mais coisas adicionar aqui -->
    </lights>

    <group>
        <!-- Sol (Origem) -->
        <group>
        <!-- há diferença se o rotate ou translate acontece primeiro? -->
            <translate X = 0 Y = 0 Z = 0 timeT = 0/>
            <rotate angle = 10 axisX = 1/>      
            <color R = 1 G = 0.549 B = 0/> <!-- Dark Orange -->
            <!-- <color R = 253 G = 184 B = 19 />  Sun / Yellow Orange -->
            
            <group>
                <translate timeT = 0 align = True/>    
                <rotate axisY = 1 timeR = 67 /> 
                <scale scaleX = 7 scaleY = 7 saleZ = 7/>
            
                <models>
                    <model file = "sphere.3d" texture = "sun" />
                </models>
            </group>

        </group>



        <!-- Mercurio T = 0.25 Distancia(d)= 13   -->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY = 0/>
            <orbit radX = 13 radZ = 13 aux = 16/> <!-- Valores para obter a orbita do planeta-->

            <!-- Planeta --> 
            <group>

                <translate timeT = 0 align = True>
                    <point X = 9.1923885 Z = 9.1923885 />
                    <!-- FALTAM OS PONTOS -->
                </translate>

                <rotate axisX = 1 timeR = 11/>
                <scale scaleX = 0.25 scaleY = 0.25 scaleZ = 0.25 />
                <color R = 0.6667 G = 0.6627 B = 0.6784 /> 
                <!-- Silver Gray <color R = 192 G = 192 B = 192/> --> 

                <models> 
                    <model file = "sphere.3d" texture = "Mercury"/>
                </models>
            
            </group>
        </group>



        <!-- Venus T = 0.6 Ds = 18 -->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY= 0/>
            <orbit radX = 18 radZ = 18 aux = 16 />

            <!-- Planeta --> 
            <group>

                <translate timeT = 0 align = True>
                    <point X = 7.345 Y = 0 Z = 16.433 />
                </translate>

                <rotate axisY = 0 axisZ = 0 timeR = 14/>
                <scale scaleX = 0.6 scaleY = 0.6 scaleZ = 0.6 />
                <color R = 0.918 G = 0.878 B = 0.784 />
                <!-- Pearl <color R = 234 G = 224 B = 200/> -->
                <models> 
                    <model file = "sphere.3d" texture = "Venus"/>
                </models>

            </group>
        </group>    


        <!-- Terra - T = 0.65 D = 21
            Lua - T = 0.2 Dp = 0.7  -->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY = 0 />
            <orbit radX = 21 radZ = 21 aux = 16/>

            <!-- Planeta --> 
            <group>
                <translate timeT = 10 align = True> 
                    <point X = 21 Y = 0 Z = 0  />
                </translate>

                <rotate axisY = 1 timeR = 18/>

                <!-- POSSIBILIDADE DE CRIAR AQUI UM GRUPO-->
                <scale scaleX = 0.65 scaleY = 0.65 scaleZ = 0.65 />
                <color R = 0.0 G = 0.749 B = 1 />
                <!-- Deep Sky Blue <color R = 0 G = 191 B = 255/>   -->
                <models> 
                    <model file = "sphere.3d" texture = "Earth" />
                </models>


                <!-- Lua distancia da terra 0.03844 -->
                <group>
                    <rotate angle = 25 axisY= 1/>
                    <orbit radX = 1.6 radZ = 1.6 aux = 16/>

                    <group>
                        <translate timeT = 0 align = True> 
                            <point X = 1.6 Y = 0 Z = 0/>
                        </translate>
                    
                        <rotate axisY = 1 timeR = 0/>
                        <scale scaleX =  0.2 scaleY =  0.2 scaleZ =  0.2/>
                        <color R = 0.502 G = 0.502 B = 0.502 /> 
                        <!-- Gray <color R = 255 G = 0 B = 0/> -->
                        <models> 
                            <model file = "sphere.3d" texture = "Earth_Moon" />
                        </models>
                    </group>
                </group>


            </group>
        </group>    
    


        <!-- Marte - 0.35 - 30-->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY = 0 />
            <orbit radX = 25 radZ = 25 aux = 16/>

            <!-- Planeta --> 
            <group>
                <translate  timeT = 0 align = True> 
                    <point X = 24.78 Y = 0 Z = -3.309/>
                </translate>

                <rotate axisY = 0 axisZ = 0 timeR = 0/>
                <scale scaleX = 0.35  scaleY = 0.35  scaleZ = 0.35  />
                <color R = 1 G = 0.498 B = 0.314/>
                <!-- <color R = 255 G = 127 B = 80/> Coral  -->

                <models> 
                    <model file = "sphere.3d" texture = "Mars" />
                </models>

            </group>
        </group>


        <!-- Jupiter T = 7      Ds= 45
            Ganyme   T = 0.26   Dp= 7.4     
            Callisto T = 0.24   Dp= 7.5  
            IO       T = 0.18   Dp= 7.2    
            Europa   T = 0.15   Dp= 7.3  -->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY = 0/>
            <orbit radX = 45 radZ = 45 aux = 16 />

            <!-- Planeta --> 
            <group>
                <translate timeT = 23 align = True> 
                    <point X = 0 Y = 0 Z = -45 />
                </translate>

                <rotate axisX = 0 timeR = 0/>
                <scale scaleX = 7 scaleY = 7 scaleZ = 7 />
                <color R = 0.2471 G = 0 B = 0.588/> 
                <!-- Chocolate <color R = 210 G = 105 B = 30/>  -->
                <models> 
                    <model file = "sphere.3d" texture = "Jupiter" />
                </models>

                <!-- Ganyme Distancia de Jupiter -->
                <group>
                    <rotate angle = 0 axisY = 0 />
                    <orbit radX = 2.5 radZ = 2.5 aux = 16 />

                    <group>
                        <translate timeT = 4 align = True> 
                            <point X = 2.5 Y = 0 Z = 0 />
                        </translate>

                        <rotate axisX = 0 timeR = 0/>
                        <scale scaleX = 0.26 scaleY = 0.26 scaleZ = 0.26 />
                        <color R = 0.4 G = 0 B = 0.6 />  <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Jupiter_Ganyme"/>
                        </models>

                    </group>
                </group>


                <!-- Callisto  -->
                <group>
                    <rotate angle = 15 axisY= 0/>
                    <orbit radX = 2.1 radZ = 2.1 aux = 16 />

                    <group>
                        <translate timeT = 0 align = True> 
                            <point X = 0 Y = 0 Z = 2.1 />
                        </translate>

                        <rotate axisY = 0 timeR = 0/>
                        <scale scaleX = 0.24 scaleY = 0.24 scaleZ = 0.24 />
                        <color R = 0 G = 0.502 B = 0.502 />  <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Jupiter_Callisto"/>
                        </models>

                    </group>
                </group>


                <!-- IO  -->
                <group>
                    <rotate angle = 25 axisX= 1/>
                    <orbit radX = 1.7 radZ = 1.7 aux = 16/>

                    <group>
                        <translate timeT = 0 align = True> 
                            <point  X = -1.7 Y = 0 Z = 0 />
                        </translate>

                        <rotate axisY = 0 timeR = 0/>
                        <scale scaleX = 0.18 scaleY = 0.18 scaleZ = 0.18 />
                        <color R = 0.502 G = 0.502 B = 0 />  <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Jupiter_IO"/>
                        </models>

                    </group>
                </group>


                <!-- Europa  -->
                <group>
                    <rotate angle = 5 axisX= 0/>
                    <orbit radX = 1.3 radZ = 1.3 aux = 16/>

                    <group>
                        <translate timeT = 0 align = True> 
                            <point X = 0 Y = 0 Z = -1.3 />
                        </translate>

                        <rotate axisY = 0 axisZ = 0 timeR = 0/>
                        <scale scaleX = 0.15 scaleY = 0.15 scaleZ = 0.15 />
                        <color R = 0 G = 0.8 B = 0.8 />  <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Jupiter_Europa"/>
                        </models>

                    </group>
                </group>        


            </group>
        </group>



        <!-- Saturno  T = 6      Ds = 75
                Titan T = 0.26   Dp = 6.3
                Rhea  T = 0.08   Dp = 6.1-->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY = 0 />
            <orbit radX = 75 radZ = 75 aux = 16/>
     
            <!-- Planeta --> 
            <group>
                <translate timeT = 0 align = True>
                    <point  X = -75 Y = 0 Z = 0 />
                </translate> 

                <rotate axisY = 0 axisZ = 0 timeR = 0/>
                <scale scaleX = 6 scaleY = 6 scaleZ = 6 />
                <color R = 1 G = 0.6824 B = 0.2588 />
                <models> 
                    <model file = "sphere.3d" texture = "Saturn"/>
                </models>

            
                <!-- Titan  -->
                <group>
                    <rotate angle = 0 axisX= 0/>
                    <orbit radX = 1.25 radZ = 1.25 aux = 16 />

                    <group>
                        <translate timeT = 0 align = True> 
                            <point X = 1.25 Y = 0 Z = 0 />
                        </translate>

                        <rotate axisZ = 0 timeR = 0/>
                        <scale scaleX = 0.043  scaleY = 0.043  scaleZ = 0.043  />
                        <color R = 0.502 G = 0.502 B = 0.502 /> <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Saturn_Titan" />
                        </models>
                    </group>

                </group>     

                 <!-- Rhea  -->
                <group>
                    <rotate angle = 0 axisX= 0/>
                    <orbit radX = 1.15 radZ = 1.15 aux = 16/>

                    <group>
                        <translate timeT = 0 align = True> 
                            <point X = -1.15 Y = 0 Z = 0 />
                        </translate>

                        <rotate axisY = 0 axisZ = 0 timeR = 21/>
                        <scale scaleX = 0.03  scaleY = 0.03  scaleZ = 0.03  />
                        <color R = 0.502 G = 0.502 B = 0.502 /> <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Saturn_Rhea" />
                        </models>

                    </group>
                </group>  

            </group>
        </group>


        <!-- Urano     T = 2.5  Ds= 85
                Triton T = 0.15 Dp= 2.7 -->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisY = 0/>
            <orbit radX = 85 radZ = 85 aux = 16 />

            <!-- Planeta --> 
            <group>
                <translate timeT = 0 align = True> 
                    <point X = 0 Y = 0 Z = 85/>
                </translate>

                <rotate axisY = 0 timeR = 0/>
                <scale scaleX = 2.5 scaleY = 2.5 scaleZ = 2.5 />
                <color R = 0.2745 G = 0.5098 B = 0.7059 /> <!-- Light Steel Blue-->

                <models> 
                    <model file = "sphere.3d" texture = "Uranus"/>
                </models>

                <!-- Triton  -->
                <group>
                    <rotate angle = 0 axisX= 0/>
                    <orbit radX = 1.2 radZ = 1.2 aux = 16/>

                    <group>
                        <translate timeT = 0 align = True> 
                            <point X = 1.2 Y = 0 Z = 0/>
                        </translate>

                        <rotate axisY = 0 timeR = 0/>
                        <scale scaleX = 0.15  scaleY = 0.15  scaleZ = 0.15  />
                        <color R = 0.3 G = 0.502 B = 0.5 /> <!-- MISSING COLOR -->

                        <models> 
                            <model file = "sphere.3d" texture = "Uranos_Triton"/>
                        </models>
                    </group>

                </group>
            </group>
        </group>



        <!-- Neptuno    T = 2.5  Ds = 95
                Titania T = 0.08 Dp = 2.8-->
        <group>
            <!-- Orbita -->
            <rotate angle = 0 axisX= 0/>
            <orbit radX = 95 radZ = 95 aux = 16 />

            <!-- Planeta --> 
            <group>
                <translate timeT = 0 align = True> 
                    <point X = 95 Y = 0 Z = 0 />
                </translate>

                <rotate axisY = 0 axisZ = 0 timeR = 0/>
                <scale scaleX = 2.5 scaleY = 2.5 scaleZ = 2.5 />
                <color R = 0.25 G = 0.41 B = 0.88/> <!-- Royal Blue -->
                <models> 
                    <model file = "sphere.3d" texture = "Neptune" />
                </models>

                <!-- Titania  -->

                <group>
                    <rotate angle = 0 axisX= 0 axisY = 0/>
                    <orbit radX = 1.2 radZ = 1.2 aux = 16 />

                    <group>
                        <translate timeT = 0 align = True>
                            <point X = 1.2 Y = 0 Z = 0/>
                        </translate> 
                        <rotate axisY = 0 timeR = 0/>
                        <scale scaleX = 0.08  scaleY = 0.08  scaleZ = 0.08  />
                        <color R = 0.25 G = 1 B = 1 />  <!-- MISSING COLOR -->
                        <models> 
                            <model file = "sphere.3d" texture = "Neptune_Titania"/>
                        </models>
                    </group>

                </group>

            </group>
        </group>
    </group>
</scene>