<world> <!-- a world can have a camera, a set of lights, and a single group -->

    <camera> 
	    <position x="3" y="2" z="3" />
	    <lookAt x="0" y="0" z="0" />
	    <up x="0" y="1" z="0" /> <!-- optional, use these values as default-->
        <projection fov="60" near="1" far="1000" /> <!-- optional, use these values as default-->
    </camera>

    <group> 
        <transform> 
		    <translate x="0" y="0.75" z="0" />
        </transform>
		<group>
			<transform> 
				<scale x="0.75" y="0.75" z="0.75" />
			</transform>
			<models> 
				<model file="sphere.3d" /> <!-- generator sphere 8 8 1 sphere.3d -->
			</models>
		</group>
		<group> 
			<transform> 
				<translate x="0" y="1" z="0" />
			</transform>
			<group>
				<transform> 
					<scale x="0.25" y="0.25" z="0.25" />
				</transform>
				<models> 
					<model file="sphere.3d" /> <!-- generator sphere 8 8 1 sphere.3d -->
				</models>
			</group>
			<group>
				<transform> 
					<rotate angle="90" x="1" y="0" z="0" />
					<scale x="0.1" y="0.3" z="0.1" />>
				</transform>
				<models> 
					<model file="cone.3d" /> <!-- generator.exe cone 1 2 4 3 cone.3d -->
				</models>
			</group>
		</group>
	</group>
</world>
